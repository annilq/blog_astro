---
// NavigationDrawer.astro
// This component provides a basic navigation drawer functionality.
// Removed React-specific hooks and @mui/joy components.
// Replaced with basic HTML elements and inline SVG for the menu icon.

import Navigation from "./Navigation.astro"; // Assuming Navigation will be an Astro component
---

<div class="flex gap-2">
    <button
        id="navigation-drawer-button"
        class="p-2 rounded-md hover:bg-gray-100 dark:hover:bg-gray-700"
    >
        <!-- Menu Icon SVG -->
        <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-menu w-5 h-auto"
        >
            <line x1="4" x2="20" y1="12" y2="12"></line><line
                x1="4"
                x2="20"
                y1="6"
                y2="6"></line><line x1="4" x2="20" y1="18" y2="18"></line>
        </svg>
    </button>

    <div
        id="navigation-drawer"
        class="fixed top-0 left-0 h-full w-64 bg-white dark:bg-gray-800 shadow-lg transform -translate-x-full transition-transform duration-300 ease-in-out z-50"
        role="dialog"
        aria-modal="true"
        aria-labelledby="navigation-drawer-title"
    >
        <div class="flex justify-end p-4">
            <button
                id="navigation-drawer-close-button"
                class="p-2 rounded-md hover:bg-gray-100 dark:hover:bg-gray-700"
            >
                <!-- Close Icon SVG (X icon) -->
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-x w-5 h-auto"
                >
                    <path d="M18 6 6 18"></path><path d="m6 6 12 12"></path>
                </svg>
            </button>
        </div>
        <div class="w-full h-full overflow-auto px-4">
            <Navigation />
        </div>
    </div>

    <div
        id="navigation-drawer-overlay"
        class="fixed inset-0 bg-black bg-opacity-50 z-40 hidden"
    >
    </div>
</div>
