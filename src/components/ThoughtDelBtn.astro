---
import { deleteThought } from "../api/thoughts/actions";

interface Props {
    id: string;
}

const { id } = Astro.props;

async function handleDelete() {
    await deleteThought(id, Astro.request);
}
---

<form method="POST" action={handleDelete}>
    <button type="submit" class="cursor-pointer w-4 h-4"> 🗑️ </button>
</form>
